<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Frame name="SoundtrackFrameProfilesFrameTemplate" hidden="true" virtual="true">
        <Size>
            <RelDimension x="0.5" y="0.8"/>
        </Size>
        <Anchors>
            <Anchor point="TOP" relativeTo="SoundtrackFrame" relativePoint="TOP"/>
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <FontString name="ProfilesTab_HeaderText" inherits="GameFontNormal" text="Profiles">
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="50" y="-50"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Frame name="LoadProfileDropDown" inherits="UIDropDownMenuTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="ProfilesTab_HeaderText">
                        <Offset>
                            <AbsDimension x="-15" y="-10"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Frame>
        </Frames>
        <Scripts>
            <OnShow>ProfilesTab_RefreshProfilesFrame()</OnShow>
            <OnLoad>ProfilesTab_OnLoad()</OnLoad>
        </Scripts>
    </Frame>
</Ui>