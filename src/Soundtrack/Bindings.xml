<?xml version="1.0"?>
<Bindings>
  <Binding name="Toggle soundtrack window" category="SOUNDTRACK_BINDING_HEADER">
        SoundtrackUI.Toggle();
    </Binding>
  <Binding name="Play/Pause track" category="SOUNDTRACK_BINDING_HEADER">
        Soundtrack.Events.PlaybackPlayStop();
    </Binding>
  <Binding name="Next track" category="SOUNDTRACK_BINDING_HEADER">
        Soundtrack.Events.PlaybackNext();
    </Binding>
  <Binding name="Previous track" category="SOUNDTRACK_BINDING_HEADER">
        Soundtrack.Events.PlaybackPrevious();
    </Binding>
  <Binding name="Stop track" category="SOUNDTRACK_BINDING_HEADER">
		Soundtrack.Events.PlaybackTrueStop();
	</Binding>
</Bindings>
